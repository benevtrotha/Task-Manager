<h1>Task list</h1>
<ul>
<% @tasks.each do |task| %>
<% if task.completed == true %>
<i class="fas fa-check-square"></i>
<% else %>
<i class="far fa-square"></i>
<% end %>
<li><%= link_to task.title, task %> <%= link_to "🗑️", task_path(task), method: :delete, data: { confirm: "Are you sure?" }  %></li>
<% end %>
</ul>
<%= link_to "Add a task", new_task_path %>
